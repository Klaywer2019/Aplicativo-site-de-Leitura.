    <script>
        function toggleRec() {
            const btn = document.getElementById('recBtn');
            const status = document.getElementById('statusRec');
            if (status.innerText === "PRONTO") {
                status.innerText = "GRAVANDO...";
                btn.style.animation = "blink 1s infinite";
            } else {
                status.innerText = "PRONTO";
                btn.style.animation = "none";
                alert("Sua m√∫sica r√∫nica foi salva no cache! üíæ");
            }
        }
    </script>
